<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:gravity="top|center|center_vertical"
    android:background="@drawable/new_back">

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_arrow"
        android:paddingTop="25dp"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Call"
        android:textSize="60sp"
        android:paddingBottom="49dp"
        android:textColor="#1C07FA"
        android:textStyle="bold|italic"/>

    <EditText
        android:id="@+id/frName"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"/>

    </LinearLayout>

    <EditText
        android:id="@+id/frAddr"
        android:inputType="textPostalAddress"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/white"/>

    </LinearLayout>

    <EditText
        android:id="@+id/frPhone"
        android:inputType="phone"
        android:layout_width="wrap_content"
        android:ems="10"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CellPhone Number"
            android:textColor="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/call"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:onClick="callFr"
            android:textSize="40dp"
            android:background="@drawable/callbutt"/>

    </LinearLayout>

</LinearLayout>

